@model List<BankAndFinance.Models.Card>

@{
    ViewBag.Title = "My Cards";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 24px;
        margin-bottom: 32px;
    }

    .credit-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 28px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        min-height: 220px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .credit-card.debit {
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        box-shadow: 0 10px 30px rgba(6, 182, 212, 0.4);
    }

    .credit-card.inactive {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        opacity: 0.7;
    }

    .card-chip {
        width: 50px;
        height: 40px;
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .card-number {
        font-size: 24px;
        font-family: 'Courier New', monospace;
        letter-spacing: 3px;
        margin: 20px 0;
    }

    .card-details {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }

    .card-holder, .card-expiry {
        font-size: 12px;
        text-transform: uppercase;
        opacity: 0.8;
    }

    .card-holder-name, .card-expiry-date {
        font-size: 16px;
        font-weight: 600;
        margin-top: 4px;
    }

    .card-logo {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 32px;
    }

    .card-status-badge {
        position: absolute;
        top: 20px;
        left: 20px;
        background: rgba(255, 255, 255, 0.2);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        backdrop-filter: blur(10px);
    }

    .card-actions {
        margin-top: 16px;
        display: flex;
        gap: 12px;
    }

    .no-cards {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 16px;
        border: 2px dashed #e2e8f0;
    }

    .no-cards-icon {
        font-size: 64px;
        margin-bottom: 20px;
    }

    @@media (max-width: 767px) {
        .cards-grid {
            grid-template-columns: 1fr;
        }

        .card-number {
            font-size: 20px;
        }
    }
</style>

<div class="card">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 16px;">
        <div>
            <div class="card-title">üí≥ My Cards</div>
            <div style="display: flex; gap: 24px; margin-top: 12px; font-size: 14px;">
                <div>
                    <span style="color: #64748b;">Total Cards Balance:</span>
                    <strong style="color: #10b981; font-size: 18px; margin-left: 8px;">$@ViewBag.TotalCardBalance.ToString("N2")</strong>
                </div>
                <div>
                    <span style="color: #64748b;">Account Balance:</span>
                    <strong style="color: #3b82f6; font-size: 18px; margin-left: 8px;">$@ViewBag.Balance.ToString("N2")</strong>
                </div>
            </div>
        </div>
        <div style="display: flex; gap: 12px;">
            <a href="@Url.Action("Transfer")" class="btn btn-outline">üîÑ Transfer Between Cards</a>
            <a href="@Url.Action("MyRequests")" class="btn btn-outline">üìã My Requests</a>
            <a href="@Url.Action("RequestCard")" class="btn btn-primary">‚ûï Request New Card</a>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="cards-grid">
        @foreach (var card in Model)
        {
            <div>
                <div class="credit-card @(card.CardType.ToLower()) @(card.CardStatus == "Inactive" ? "inactive" : "")">
                    <div class="card-status-badge">@card.CardStatus</div>
                    <div class="card-logo">
                        @if (card.CardType == "Debit")
                        {
                            <span>üí≥</span>
                        }
                        else
                        {
                            <span>üíé</span>
                        }
                    </div>
                    
                    <div class="card-chip"></div>
                    
                    <div class="card-number">
                        **** **** **** @card.CardNumber.Substring(card.CardNumber.Length - 4)
                    </div>
                    
                    <div style="margin: 15px 0; padding: 12px; background: rgba(255,255,255,0.2); border-radius: 8px;">
                        <div style="font-size: 12px; opacity: 0.8;">Card Balance</div>
                        <div style="font-size: 24px; font-weight: 700; margin-top: 4px;">$@card.Balance.ToString("N2")</div>
                        @if (card.IsPrimary)
                        {
                            <div style="margin-top: 8px; font-size: 11px; background: rgba(255,255,255,0.3); display: inline-block; padding: 4px 8px; border-radius: 4px;">‚≠ê PRIMARY</div>
                        }
                    </div>
                    
                    <div class="card-details">
                        <div>
                            <div class="card-holder">Card Holder</div>
                            <div class="card-holder-name">@Context.Session.GetString("UserName")</div>
                        </div>
                        <div style="text-align: right;">
                            <div class="card-expiry">Valid Thru</div>
                            <div class="card-expiry-date">@card.ExpiryDate?.ToString("MM/yy")</div>
                        </div>
                    </div>
                </div>
                
                <div class="card-actions">
                    <a href="@Url.Action("CardDetails", new { id = card.CardId })" class="btn btn-primary" style="flex: 1;">
                        üëÅÔ∏è Details
                    </a>
                    @if (card.CardStatus == "Active")
                    {
                        @if (!card.IsPrimary)
                        {
                            <form method="post" asp-action="SetPrimary" style="flex: 1;">
                                <input type="hidden" name="cardId" value="@card.CardId" />
                                <button type="submit" class="btn btn-outline" style="width: 100%;">
                                    ‚≠ê Set Primary
                                </button>
                            </form>
                        }
                        <form method="post" asp-action="BlockCard" style="flex: 1;">
                            <input type="hidden" name="cardId" value="@card.CardId" />
                            <button type="submit" class="btn btn-outline" style="width: 100%; color: #ef4444; border-color: #ef4444;" onclick="return confirm('Are you sure you want to block this card?')">
                                üîí Block
                            </button>
                        </form>
                    }
                    else if (card.CardStatus == "Blocked")
                    {
                        <form method="post" asp-action="UnblockCard" style="flex: 1;">
                            <input type="hidden" name="cardId" value="@card.CardId" />
                            <button type="submit" class="btn btn-primary" style="width: 100%;">
                                üîì Unblock
                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="no-cards">
        <div class="no-cards-icon">üí≥</div>
        <h3>No Cards Yet</h3>
        <p style="color: #64748b; margin: 16px 0;">You don't have any cards. Request your first card now!</p>
        <a href="@Url.Action("RequestCard")" class="btn btn-primary">‚ûï Request New Card</a>
    </div>
}
