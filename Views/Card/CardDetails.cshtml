@model BankAndFinance.Models.Card
@{
    ViewBag.Title = "Card Details";
    ViewBag.PageTitle = "Card Details";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="card">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <div class="card-title">üí≥ Card Details</div>
        <a href="@Url.Action("MyCards")" class="btn btn-outline">‚Üê Back to Cards</a>
    </div>
    
    <div style="padding: 30px;">
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px; margin-bottom: 32px;">
            <!-- Card Visual -->
            <div style="background: linear-gradient(135deg, @(Model.CardType == "Debit" ? "#06b6d4, #0891b2" : "#667eea, #764ba2")); border-radius: 20px; padding: 28px; color: white; min-height: 240px; display: flex; flex-direction: column; justify-content: space-between;">
                <div>
                    <div style="display: flex; justify-content: space-between;">
                        <div style="background: rgba(255,255,255,0.2); padding: 6px 12px; border-radius: 20px; font-size: 12px;">@Model.CardStatus</div>
                        <div style="font-size: 32px;">@(Model.CardType == "Debit" ? "üí≥" : "üíé")</div>
                    </div>
                    <div style="width: 50px; height: 40px; background: linear-gradient(135deg, #ffd700, #ffed4e); border-radius: 8px; margin: 20px 0;"></div>
                    <div style="font-size: 24px; font-family: monospace; letter-spacing: 3px;">
                        **** **** **** @Model.CardNumber.Substring(Model.CardNumber.Length - 4)
                    </div>
                </div>
                <div style="display: flex; justify-content: space-between;">
                    <div>
                        <div style="font-size: 11px; opacity: 0.8;">CARD HOLDER</div>
                        <div style="font-size: 14px; font-weight: 600; margin-top: 4px;">@Context.Session.GetString("UserName")</div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-size: 11px; opacity: 0.8;">VALID THRU</div>
                        <div style="font-size: 14px; font-weight: 600; margin-top: 4px;">@Model.ExpiryDate?.ToString("MM/yy")</div>
                    </div>
                </div>
            </div>

            <!-- Card Info -->
            <div style="background: #f8fafc; border-radius: 12px; padding: 24px;">
                <h3 style="margin: 0 0 20px 0; font-size: 18px;">Card Information</h3>
                <div style="display: flex; flex-direction: column; gap: 16px;">
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Card Type</div>
                        <div style="font-weight: 600;">@Model.CardType Card</div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Current Balance</div>
                        <div style="font-weight: 700; color: #10b981; font-size: 24px;">$@Model.Balance.ToString("N2")</div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Card Limit</div>
                        <div style="font-weight: 600;">@(Model.CardLimit.HasValue ? "$" + Model.CardLimit.Value.ToString("N2") : "No Limit")</div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Status</div>
                        <div>
                            @if (Model.CardStatus == "Active")
                            {
                                <span style="background: #dcfce7; color: #16a34a; padding: 6px 12px; border-radius: 6px; font-weight: 600; font-size: 14px;">‚úÖ Active</span>
                            }
                            else if (Model.CardStatus == "Blocked")
                            {
                                <span style="background: #fee2e2; color: #dc2626; padding: 6px 12px; border-radius: 6px; font-weight: 600; font-size: 14px;">üîí Blocked</span>
                            }
                        </div>
                    </div>
                    @if (Model.IsPrimary)
                    {
                        <div>
                            <div style="background: #fef3c7; color: #92400e; padding: 12px; border-radius: 8px; display: flex; align-items: center; gap: 8px;">
                                <span style="font-size: 20px;">‚≠ê</span>
                                <div>
                                    <div style="font-weight: 600;">Primary Card</div>
                                    <div style="font-size: 12px;">This is your default card</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Transaction History -->
        <div style="background: white; border: 2px solid #e2e8f0; border-radius: 12px; padding: 24px;">
            <h3 style="margin: 0 0 20px 0; font-size: 18px;">Transaction History (Last 50)</h3>
            @if (ViewBag.Transactions != null && ((List<BankAndFinance.Models.Transaction>)ViewBag.Transactions).Any())
            {
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background: #f8fafc; border-bottom: 2px solid #e2e8f0;">
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600;">Date</th>
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600;">Type</th>
                                <th style="padding: 12px; text-align: right; font-size: 12px; color: #64748b; font-weight: 600;">Amount</th>
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in (List<BankAndFinance.Models.Transaction>)ViewBag.Transactions)
                            {
                                <tr style="border-bottom: 1px solid #f1f5f9;">
                                    <td style="padding: 12px; color: #64748b; font-size: 14px;">@transaction.TransactionDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td style="padding: 12px; font-weight: 600;">@transaction.TransactionType</td>
                                    <td style="padding: 12px; text-align: right; font-weight: 600; color: @(transaction.TransactionType.Contains("Deposit") ? "#10b981" : "#ef4444");">
                                        @(transaction.TransactionType.Contains("Deposit") ? "+" : "-")$@transaction.Amount.ToString("N2")
                                    </td>
                                    <td style="padding: 12px;">
                                        @if (transaction.Status == "Completed")
                                        {
                                            <span style="background: #dcfce7; color: #16a34a; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600;">‚úì Completed</span>
                                        }
                                        else if (transaction.Status == "Pending")
                                        {
                                            <span style="background: #fef3c7; color: #d97706; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600;">‚è≥ Pending</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    <div style="font-size: 48px; margin-bottom: 16px;">üì≠</div>
                    <p>No transactions found for this card</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    @@media (max-width: 768px) {
        div[style*="grid-template-columns: 1fr 1fr"] {
            grid-template-columns: 1fr !important;
        }
    }
</style>
