<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BFAS Employee</title>
    <link rel="stylesheet" href="~/css/modern-theme.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Windsurf-Inspired Color Palette - EMPLOYEE THEME */
        :root {
            --primary: #06b6d4;
            --primary-dark: #0891b2;
            --primary-light: #22d3ee;
            --secondary: #0ea5e9;
            --secondary-dark: #0284c7;
            --accent: #14b8a6;
            --accent-dark: #0d9488;
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --bg-primary: #ffffff;
            --bg-secondary: #f8fafc;
            --bg-tertiary: #f1f5f9;
            --text-primary: #0f172a;
            --text-secondary: #475569;
            --text-tertiary: #64748b;
            --border: #e2e8f0;
        }

        /* Employee Sidebar - Cyan Gradient */
        .sidebar {
            background: linear-gradient(180deg, var(--primary) 0%, var(--primary-dark) 100%) !important;
            box-shadow: 4px 0 24px rgba(6, 182, 212, 0.15) !important;
        }

        .logo {
            border-bottom: 1px solid rgba(255, 255, 255, 0.2) !important;
        }

        .logo-icon {
            background: rgba(255, 255, 255, 0.2) !important;
            border: 2px solid rgba(255, 255, 255, 0.3) !important;
        }

        .nav-item {
            color: rgba(255, 255, 255, 0.9) !important;
        }

        .nav-item:hover {
            background: rgba(255, 255, 255, 0.15) !important;
            color: white !important;
        }

        .nav-item.active {
            background: rgba(255, 255, 255, 0.25) !important;
            color: white !important;
            border-left: 4px solid white !important;
        }

        .nav-section-title {
            color: rgba(255, 255, 255, 0.6) !important;
        }

        .nav-dropdown {
            background: rgba(0, 0, 0, 0.1) !important;
        }

        /* Main content gradient */
        .main-content {
            background: linear-gradient(to bottom, #f8fafc 0%, #f1f5f9 100%) !important;
        }

        /* Header with accent */
        .header {
            background: white !important;
            border-bottom: 3px solid transparent !important;
            border-image: linear-gradient(to right, var(--primary), var(--accent)) !important;
            border-image-slice: 1 !important;
        }

        /* Cards */
        .card {
            border-left: 4px solid var(--primary) !important;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark)) !important;
        }

        .btn-primary:hover {
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.4) !important;
        }

        /* Stats cards */
        .stat-card {
            border-top: 4px solid var(--primary) !important;
        }

        /* Active highlights */
        .badge-primary {
            background: var(--primary) !important;
        }

        /* User avatar in header */
        .user-avatar {
            background: linear-gradient(135deg, var(--primary), var(--accent)) !important;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <div class="logo-icon">üíº</div>
            <h2>BFAS</h2>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Overview</div>
            <a class="nav-item" href="@Url.Action("Dashboard", "Employee")">
                <span class="nav-icon">üìä</span>
                <span>Dashboard</span>
            </a>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Finance Management</div>
            <div class="nav-parent" onclick="toggleDropdown('finance')">
                <div class="nav-item">
                    <span class="nav-icon">üí∞</span>
                    <span>Finance</span>
                    <span class="nav-arrow">‚ñ∂</span>
                </div>
            </div>
            <div class="nav-dropdown" id="finance">
                <a class="nav-item nav-sub-item" href="@Url.Action("AccountsPayable", "Employee")">Accounts Payable</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("AccountsReceivable", "Employee")">Accounts Receivable</a>
            </div>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Accounting Management</div>
            <div class="nav-parent" onclick="toggleDropdown('accounting')">
                <div class="nav-item">
                    <span class="nav-icon">üìù</span>
                    <span>Accounting</span>
                    <span class="nav-arrow">‚ñ∂</span>
                </div>
            </div>
            <div class="nav-dropdown" id="accounting">
                <a class="nav-item nav-sub-item" href="@Url.Action("JournalEntries", "Employee")">Journal Entries</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("LedgerAccounts", "Employee")">Ledger Accounts</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("TrialBalance", "Employee")">Trial Balance</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("FinancialStatements", "Employee")">Financial Statements</a>
            </div>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">ERP Modules</div>
            <div class="nav-parent" onclick="toggleDropdown('erp')">
                <div class="nav-item">
                    <span class="nav-icon">üè¢</span>
                    <span>ERP System</span>
                    <span class="nav-arrow">‚ñ∂</span>
                </div>
            </div>
            <div class="nav-dropdown" id="erp">
                <a class="nav-item nav-sub-item" href="@Url.Action("Index", "HR")">üë• Human Resources</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("Index", "Inventory")">üì¶ Inventory</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("Index", "CRM")">ü§ù CRM</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("Index", "Project")">üìä Projects</a>
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="top-bar">
            <div class="page-title-section">
                <h1>@ViewBag.PageTitle</h1>
                <div class="breadcrumb">@ViewBag.Breadcrumb</div>
            </div>
            <div class="user-menu">
                <div class="user-profile">
                    <div class="user-avatar">@(Context.Session.GetString("UserName")?.Substring(0, 2).ToUpper() ?? "EM")</div>
                    <div class="user-info">
                        <div class="user-name">@Context.Session.GetString("UserName")</div>
                        <div class="user-role">Employee</div>
                    </div>
                </div>
                <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline" style="padding: 10px 16px;">Logout</a>
            </div>
        </div>

        @RenderBody()
    </div>

    <script>
        function toggleDropdown(id) {
            const dropdown = document.getElementById(id);
            const parent = dropdown.previousElementSibling;
            dropdown.classList.toggle('active');
            parent.classList.toggle('open');
        }

        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navItems = document.querySelectorAll('.nav-item');
            
            navItems.forEach(item => {
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                    
                    const dropdown = item.closest('.nav-dropdown');
                    if (dropdown) {
                        dropdown.classList.add('active');
                        dropdown.previousElementSibling.classList.add('open');
                    }
                }
            });
        });
    </script>
</body>
</html>
