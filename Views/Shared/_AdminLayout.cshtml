<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BFAS Admin</title>
    <link rel="stylesheet" href="~/css/modern-theme.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Windsurf-Inspired Color Palette - ADMIN THEME */
        :root {
            --primary: #8b5cf6;
            --primary-dark: #7c3aed;
            --primary-light: #a78bfa;
            --secondary: #6366f1;
            --secondary-dark: #4f46e5;
            --accent: #ec4899;
            --accent-dark: #db2777;
            --success: #10b981;
            --warning: #f59e0b;
            --error: #ef4444;
            --bg-primary: #ffffff;
            --bg-secondary: #f8fafc;
            --bg-tertiary: #f1f5f9;
            --text-primary: #0f172a;
            --text-secondary: #475569;
            --text-tertiary: #64748b;
            --border: #e2e8f0;
        }

        /* Admin Sidebar - White Theme */
        .sidebar {
            background: #ffffff !important;
            box-shadow: 4px 0 24px rgba(0, 0, 0, 0.06) !important;
            border-right: 1px solid var(--border);
        }

        .logo {
            border-bottom: 1px solid var(--border) !important;
        }

        .logo-icon {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark)) !important;
            border: none !important;
        }
        
        .logo-text {
            color: var(--text-primary) !important;
        }
        
        .logo-subtitle {
            color: var(--text-secondary) !important;
        }
        
        .nav-section-title {
            color: var(--text-tertiary) !important;
        }
        
        .nav-item {
            color: var(--text-primary) !important;
        }
        
        .nav-item:hover {
            background: var(--bg-secondary) !important;
            color: var(--primary) !important;
        }
        
        .nav-item.active {
            background: linear-gradient(135deg, #f3e8ff, #ede9fe) !important;
            color: var(--primary) !important;
            border-left: 4px solid var(--primary);
        }
        
        .nav-icon {
            opacity: 0.8;
        }

        .nav-dropdown {
            background: var(--bg-secondary) !important;
        }

        /* Main content gradient */
        .main-content {
            background: linear-gradient(to bottom, #f8fafc 0%, #f1f5f9 100%) !important;
        }

        /* Header with accent */
        .header {
            background: white !important;
            border-bottom: 3px solid transparent !important;
            border-image: linear-gradient(to right, var(--primary), var(--accent)) !important;
            border-image-slice: 1 !important;
        }

        /* Cards */
        .card {
            border-left: 4px solid var(--primary) !important;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark)) !important;
        }

        .btn-primary:hover {
            box-shadow: 0 4px 12px rgba(139, 92, 246, 0.4) !important;
        }

        /* Stats cards */
        .stat-card {
            border-top: 4px solid var(--primary) !important;
        }

        /* Active highlights */
        .badge-primary {
            background: var(--primary) !important;
        }

        /* User avatar in header */
        .user-avatar {
            background: linear-gradient(135deg, var(--primary), var(--accent)) !important;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <div class="logo-icon">üè¶</div>
            <h2>BFAS</h2>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Overview</div>
            <a class="nav-item" href="@Url.Action("Dashboard", "Admin")">
                <span class="nav-icon">üìä</span>
                <span>Dashboard</span>
            </a>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">User Management</div>
            <div class="nav-parent" onclick="toggleDropdown('userMgmt')">
                <div class="nav-item">
