                    <span>User Management</span>
                    <span class="nav-arrow">‚ñ∂</span>
                </div>
            </div>
            <div class="nav-dropdown" id="userMgmt">
                <a class="nav-item nav-sub-item" href="@Url.Action("Users", "Admin")">Customers</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("Employees", "Admin")">Employees</a>
                <a class="nav-item nav-sub-item" href="@Url.Action("CustomerProfiles", "Admin")">Customer Profiles</a>
            </div>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">Banking</div>
            <div class="nav-parent" onclick="toggleDropdown('banking')">
