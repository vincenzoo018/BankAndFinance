@model BankAndFinance.Models.Card
@{
    ViewData["Title"] = "Card Details";
    ViewBag.PageTitle = "Card Details";
    ViewBag.Breadcrumb = "Banking / Cards / Details";
}

<div class="card fade-in">
    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <div class="card-title">üí≥ Card Details - #CARD@Model.CardId</div>
        <a href="@Url.Action("Cards", "Admin")" class="btn btn-sm" style="background: #64748b; color: white; padding: 8px 16px; border-radius: 6px; text-decoration: none;">
            ‚Üê Back to Cards
        </a>
    </div>
    <div style="padding: 30px;">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mb-3">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error mb-3">@TempData["Error"]</div>
        }

        <div class="row" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 24px; margin-bottom: 32px;">
            <!-- Card Information -->
            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 24px; border-radius: 16px; box-shadow: 0 8px 24px rgba(102, 126, 234, 0.3);">
                <div style="font-size: 14px; opacity: 0.9; margin-bottom: 24px;">@Model.CardType Card</div>
                <div style="font-family: 'Courier New', monospace; font-size: 22px; letter-spacing: 2px; margin-bottom: 20px;">
                    **** **** **** @Model.CardNumber.Substring(Model.CardNumber.Length - 4)
                </div>
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <div style="font-size: 11px; opacity: 0.7; margin-bottom: 4px;">CARD HOLDER</div>
                        <div style="font-size: 14px; font-weight: 600;">@Model.Account?.User?.FullName</div>
                    </div>
                    <div>
                        <div style="font-size: 11px; opacity: 0.7; margin-bottom: 4px;">EXPIRES</div>
                        <div style="font-size: 14px; font-weight: 600;">
                            @if (Model.ExpiryDate.HasValue)
                            {
                                @Model.ExpiryDate.Value.ToString("MM/yy")
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customer Information -->
            <div style="background: white; border: 2px solid #e2e8f0; padding: 24px; border-radius: 12px;">
                <h4 style="margin: 0 0 20px 0; color: #1e293b; font-size: 16px; font-weight: 600;">üë§ Customer Information</h4>
                <div style="display: flex; flex-direction: column; gap: 12px;">
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Full Name</div>
                        <div style="font-weight: 600; color: #1e293b;">@Model.Account?.User?.FullName</div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Email</div>
                        <div style="color: #3b82f6;">@Model.Account?.User?.Email</div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Account Number</div>
                        <div style="font-family: monospace; font-weight: 600;">@Model.Account?.AccountNumber</div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Account Balance</div>
                        <div style="font-weight: 600; color: #10b981; font-size: 18px;">$@Model.Account?.Balance.ToString("N2")</div>
                    </div>
                </div>
            </div>

            <!-- Card Status -->
            <div style="background: white; border: 2px solid #e2e8f0; padding: 24px; border-radius: 12px;">
                <h4 style="margin: 0 0 20px 0; color: #1e293b; font-size: 16px; font-weight: 600;">üìä Card Status</h4>
                <div style="display: flex; flex-direction: column; gap: 12px;">
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Status</div>
                        <div>
                            @if (Model.CardStatus == "Active")
                            {
                                <span style="background: #dcfce7; color: #16a34a; padding: 6px 12px; border-radius: 6px; font-weight: 600; font-size: 14px;">‚úÖ Active</span>
                            }
                            else if (Model.CardStatus == "Blocked")
                            {
                                <span style="background: #fee2e2; color: #dc2626; padding: 6px 12px; border-radius: 6px; font-weight: 600; font-size: 14px;">üîí Blocked</span>
                            }
                            else
                            {
                                <span style="background: #f1f5f9; color: #64748b; padding: 6px 12px; border-radius: 6px; font-weight: 600; font-size: 14px;">‚ùå Inactive</span>
                            }
                        </div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Card Type</div>
                        <div style="font-weight: 600;">
                            @if (Model.CardType == "Debit")
                            {
                                <span>üí≥ Debit Card</span>
                            }
                            else
                            {
                                <span>üíé Credit Card</span>
                            }
                        </div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Card Limit</div>
                        <div style="font-weight: 600;">
                            @if (Model.CardLimit.HasValue)
                            {
                                <span>$@Model.CardLimit.Value.ToString("N2")</span>
                            }
                            else
                            {
                                <span style="color: #94a3b8;">No Limit</span>
                            }
                        </div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Expiry Date</div>
                        <div style="font-weight: 600;">
                            @if (Model.ExpiryDate.HasValue)
                            {
                                var isExpired = Model.ExpiryDate.Value < DateTime.Now;
                                <span style="color: @(isExpired ? "#ef4444" : "#1e293b")">
                                    @Model.ExpiryDate.Value.ToString("MMMM dd, yyyy")
                                    @if (isExpired)
                                    {
                                        <span style="color: #ef4444; font-size: 12px; display: block; margin-top: 4px;">‚ö†Ô∏è EXPIRED</span>
                                    }
                                </span>
                            }
                            else
                            {
                                <span style="color: #94a3b8;">N/A</span>
                            }
                        </div>
                    </div>
                    <div>
                        <div style="font-size: 12px; color: #64748b; margin-bottom: 4px;">Created Date</div>
                        <div style="font-weight: 600;">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transaction History -->
        <div style="background: white; border: 2px solid #e2e8f0; padding: 24px; border-radius: 12px;">
            <h4 style="margin: 0 0 20px 0; color: #1e293b; font-size: 16px; font-weight: 600;">üìú Transaction History (Last 50)</h4>
            @if (ViewBag.Transactions != null && ((List<BankAndFinance.Models.Transaction>)ViewBag.Transactions).Any())
            {
                <div class="table-responsive">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background: #f8fafc; border-bottom: 2px solid #e2e8f0;">
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600; text-transform: uppercase;">Transaction ID</th>
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600; text-transform: uppercase;">Type</th>
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600; text-transform: uppercase;">Amount</th>
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600; text-transform: uppercase;">Payment Mode</th>
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600; text-transform: uppercase;">Date</th>
                                <th style="padding: 12px; text-align: left; font-size: 12px; color: #64748b; font-weight: 600; text-transform: uppercase;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in (List<BankAndFinance.Models.Transaction>)ViewBag.Transactions)
                            {
                                <tr style="border-bottom: 1px solid #f1f5f9;">
                                    <td style="padding: 12px; font-family: monospace; font-size: 13px;">#TXN@transaction.TransactionId</td>
                                    <td style="padding: 12px; font-weight: 600;">@transaction.TransactionType</td>
                                    <td style="padding: 12px; font-weight: 600; color: @(transaction.TransactionType.Contains("Deposit") ? "#10b981" : "#ef4444");">
                                        @(transaction.TransactionType.Contains("Deposit") ? "+" : "-")$@transaction.Amount.ToString("N2")
                                    </td>
                                    <td style="padding: 12px; font-size: 13px;">@transaction.PaymentMode</td>
                                    <td style="padding: 12px; color: #64748b; font-size: 13px;">@transaction.TransactionDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td style="padding: 12px;">
                                        @if (transaction.Status == "Completed")
                                        {
                                            <span style="background: #dcfce7; color: #16a34a; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600;">‚úì Completed</span>
                                        }
                                        else if (transaction.Status == "Pending")
                                        {
                                            <span style="background: #fef3c7; color: #d97706; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600;">‚è≥ Pending</span>
                                        }
                                        else
                                        {
                                            <span style="background: #fee2e2; color: #dc2626; padding: 4px 8px; border-radius: 4px; font-size: 12px; font-weight: 600;">‚úó Failed</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 40px; color: #64748b;">
                    <div style="font-size: 48px; margin-bottom: 16px;">üì≠</div>
                    <p style="margin: 0; font-size: 16px;">No transactions found for this card</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .alert-success {
        background: #dcfce7;
        color: #16a34a;
        padding: 12px 16px;
        border-radius: 8px;
        border-left: 4px solid #16a34a;
    }
    
    .alert-error {
        background: #fee2e2;
        color: #dc2626;
        padding: 12px 16px;
        border-radius: 8px;
        border-left: 4px solid #dc2626;
    }

    .row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    @@media (max-width: 768px) {
        .row {
            grid-template-columns: 1fr;
        }
    }
</style>
