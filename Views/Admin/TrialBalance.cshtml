@model IEnumerable<BankAndFinance.Models.TrialBalance>

@{
    ViewBag.Title = "Trial Balance";
    ViewBag.PageTitle = "Trial Balance";
    ViewBag.Breadcrumb = "Home / Accounting / Trial Balance";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Trial Balance Report</div>
    </div>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Debit</th>
                    <th>Credit</th>
                    <th>Period</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal totalDebit = 0;
                    decimal totalCredit = 0;
                }
                @foreach (var tb in Model)
                {
                    totalDebit += tb.Debit;
                    totalCredit += tb.Credit;
                    
                    <tr>
                        <td><strong>@tb.AccountName</strong></td>
                        <td>$@tb.Debit.ToString("N2")</td>
                        <td>$@tb.Credit.ToString("N2")</td>
                        <td>@tb.Period</td>
                    </tr>
                }
                <tr style="background: #f8fafc; font-weight: bold;">
                    <td>TOTAL</td>
                    <td>$@totalDebit.ToString("N2")</td>
                    <td>$@totalCredit.ToString("N2")</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
