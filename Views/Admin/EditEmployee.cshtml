@model BankAndFinance.Models.User
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Edit Employee</h5>
                        <a href="@Url.Action("Employees")" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Employees
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" action="@Url.Action("EditEmployee")">
                        <input type="hidden" name="userId" value="@Model.UserId" />

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label text-muted">Employee ID</label>
                                    <input type="text" 
                                           class="form-control" 
                                           value="@Model.UserId" 
                                           disabled>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="fullName" class="form-control-label">Full Name <span class="text-danger">*</span></label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="fullName" 
                                           name="fullName" 
                                           value="@Model.FullName"
                                           required 
                                           placeholder="Enter full name">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="email" class="form-control-label">Email Address <span class="text-danger">*</span></label>
                                    <input type="email" 
                                           class="form-control" 
                                           id="email" 
                                           name="email" 
                                           value="@Model.Email"
                                           required 
                                           placeholder="employee@example.com">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label text-muted">Current Status</label>
                                    <div>
                                        @if (Model.Status == "Active")
                                        {
                                            <span class="badge bg-gradient-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-gradient-secondary">Inactive</span>
                                        }
                                    </div>
                                    <small class="text-muted">
                                        Use the "Deactivate" button on the Employees page to change status
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label text-muted">Created Date</label>
                                    <input type="text" 
                                           class="form-control" 
                                           value="@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")" 
                                           disabled>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> <strong>Note:</strong> Password cannot be changed here. Employee must reset their own password.
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Update Employee
                                </button>
                                <a href="@Url.Action("Employees")" class="btn btn-secondary">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
